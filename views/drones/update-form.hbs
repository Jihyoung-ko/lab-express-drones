<h2 class="mt-3">Update the drone</h2>

<form action="/drones/{{drone.id}}/edit" method="POST">
  <label class="form-label"> Name:</label>
  <input type="text" name="name" value="{{drone.name}}" class="form-control mb-3"/>
  
  <label class="form-label">Propellers:</label>
  <input type="number" name="propellers" value="{{drone.propellers}}" class="form-control mb-3"/>
  
  <label class="form-label">Max Speed:</label>
  <input type="number" name="maxSpeed" value="{{drone.maxSpeed}}" class="form-control mb-3"/>
  
  <button class="btn btn-primary">Save changes</button>
</form>
